{
  "version": "1.0.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "message": "ci(publish): lerna publish %s",
      "registry": "https://registry.npmjs.org/"
    },
    "version": {
      "includeMergedTags": true,
      "allowBranch": [
        "main",
        "master",
        "develop",
        "release"
      ],
      "push": false,
      "changelog": false,
      "ignoreChanges": [
        "build/",
        "docs/",
        "*.md",
        "**/__tests__/**",
        "**/test/unit/**/*.spec.(js|jsx|ts|tsx)",
        "**/__tests__/*.(js|jsx|ts|tsx)",
        "**/*.md",
        ".gitlab/",
        "test/",
        "lerna.json"
      ],
      "message": "ci(publish): lerna version %s"
    }
  },
  "packages": [
    "packages/*"
  ]
}
